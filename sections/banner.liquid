<div class="w-full h-96 bg-blue-500 flex items-center">
    <div class="w-full max-w-7xl mx-auto px-2">
        <h1 class="font-bold text-3xl text-white">{{ section.settings.title }}</h1>
    </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Hero Text"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    }
  ]
}
{% endschema %}